<% provide :title, t("users.edit.edit_user") %>
<% provide :button_text, t("users.edit.save_changes") %>
<h1><%= t "users.edit.update_your_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <br>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.change"),
        "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
